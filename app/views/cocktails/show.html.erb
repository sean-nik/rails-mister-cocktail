<h1><%= @cocktail.name %></h1>
<h2>Ingredients:</h2>
<ul>
  <li>
  <% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to "Delete", cocktail_dose_path(@cocktail, dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
  </li>
</ul>

<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>

<%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>


<%= link_to "Return to Cocktails", root_path %>
